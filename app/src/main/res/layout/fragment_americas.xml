<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_weight="1"
            android:padding="16dp"
            android:background="@color/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="@string/americas"
                android:textColor="@color/textColorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgViewAmericasContinent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@color/imageBackground"
                app:srcCompat="@drawable/americas" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />

        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/imgViewSmallAmericas"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/americas_icon"
                        android:src="@drawable/americas"/>

                    <TextView
                        android:id="@+id/textAmericasRegion"
                        android:text="@string/americas"
                        android:textSize="20sp"
                        android:textColor="@color/textColorMain"
                        android:layout_alignTop="@+id/imgViewSmallAmericas"
                        android:layout_toRightOf="@+id/imgViewSmallAmericas"
                        android:layout_toEndOf="@+id/imgViewSmallAmericas"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:text="@string/region"
                        android:layout_below="@+id/textAmericasRegion"
                        android:layout_alignLeft="@+id/textAmericasRegion"
                        android:layout_alignStart="@+id/textAmericasRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/toolbar_dropshadow" />

                    <ImageView
                        android:id="@+id/imgAmericasTerritorySize"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icon_territory"/>

                    <TextView
                        android:id="@+id/textAreaAmericasRegion"
                        android:text="@string/americas_size_area"
                        android:textSize="18sp"
                        android:textColor="@color/textColorMain"
                        android:layout_alignTop="@+id/imgAmericasTerritorySize"
                        android:layout_toRightOf="@+id/imgAmericasTerritorySize"
                        android:layout_toEndOf="@+id/imgAmericasTerritorySize"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="13sp"
                        android:text="@string/area_region"
                        android:layout_below="@+id/textAreaAmericasRegion"
                        android:layout_alignLeft="@+id/textAreaAmericasRegion"
                        android:layout_alignStart="@+id/textAreaAmericasRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_AmericasRegion"
        android:src="@drawable/action_arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>